<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
     <% end %>
<%= render 'users/list', book: @book_new, user: @user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table">
  <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to 'Edit', edit_book_path(@user), class: "btn btn-sm btn-success edit_book" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger destroy_book", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      </tr>
  </tbody>
 </table>
</div>
</main>