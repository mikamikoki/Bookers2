<%= render 'users/list', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
     <% end %>
     </tbody>
    </table>
   </div>
  </div>
</main>
</div>