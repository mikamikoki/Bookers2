<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
     <% end %>
<%= render 'books/list', book: @book_new, user: @user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table">
  <tbody>
      <tr>
        <td><%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <p><%= @user.name %></p>
        <% end %>
        </td>
        <td><%= link_to @book.title %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger destroy_book", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
  </tbody>
 </table>
</div>
</main>