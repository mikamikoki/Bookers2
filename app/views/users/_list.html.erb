<%= form_with model:@user, local:true do |f| %>
<h2 class="mt-3">New book</h2>

<div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
</div>

<div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :opinion %>
</div>
<p>
<%= f.submit 'Create Book' %>
</p>
<% end %>
</main>